<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet_add_game</servlet-name>
        <servlet-class>servlet_add_game</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gameDelete</servlet-name>
        <servlet-class>gameDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gameUpdate</servlet-name>
        <servlet-class>gameUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_add_user</servlet-name>
        <servlet-class>servlet_add_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gameCount</servlet-name>
        <servlet-class>gameCount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_player_update</servlet-name>
        <servlet-class>servlet_player_update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet_add_game</servlet-name>
        <url-pattern>/servlet_add_game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gameDelete</servlet-name>
        <url-pattern>/gameDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gameUpdate</servlet-name>
        <url-pattern>/gameUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_add_user</servlet-name>
        <url-pattern>/servlet_add_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gameCount</servlet-name>
        <url-pattern>/gameCount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_player_update</servlet-name>
        <url-pattern>/servlet_player_update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
